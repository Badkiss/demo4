<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="470.0" prefWidth="510.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.demo4.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label prefHeight="24.0" prefWidth="250.0" text="Nombre">
      <graphic>
         <TextField fx:id="nombre" prefHeight="24.0" prefWidth="190.0" />
      </graphic>
   </Label>
   <Label prefHeight="24.0" prefWidth="250.0" text="IP">
      <graphic>
         <TextField fx:id="IP" prefHeight="24.0" prefWidth="190.0" />
      </graphic></Label>
   <Label prefHeight="24.0" prefWidth="250.0" text="Puerto">
      <graphic>
         <TextField fx:id="puerto" prefHeight="24.0" prefWidth="190.0" />
      </graphic></Label>
    <Button fx:id="start" onAction="#onStart" text="Conectar" />
   <TextField fx:id="mensaje" />
   <Button fx:id="Enviar" mnemonicParsing="false" onAction="#onEnviar" text="Enviar" />
   <VBox prefHeight="200.0" prefWidth="100.0" />
</VBox>
